
<div class = 'container'>
  <br>
  <div class = 'banner-user'>
    <h2>Log in</h2>
    <br>
      <%= simple_form_for(resource, as: resource_name, url:  new_session_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
            <%= f.input :login,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "login" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class= devise-button-wrapper>
          <div class="form-actions devise-button-up">
            <%= f.button :submit, "Log in" , class: 'devise-button' %>
          </div>
      <% end %>
        <div class = 'devise-button-down'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
  

</div>